		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "./schemas/schema.graphql"
			}
		]
	}
}
