generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  runtime  = "workerd"
}

datasource db {
  provider = "sqlite"
}

enum MediaType {
  E // episode
  M // movie
}

model TmdbImdb {
  mediaType MediaType
  title     Int
  season    Int       @default(0)
  episode   Int       @default(0)
  imdb      String
  updatedAt DateTime  @updatedAt

  @@id([mediaType, title, season, episode])
}
